<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - TMBF Billing</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")    
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("TMBF", "Index", "Home", null, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <nav>
                    @if (Session["MyMenu"] == null)
                    {
                        Session["MyMenu"] = Html.Partial("~/Views/Shared/_Menu.cshtml");
                    }
                    @Session["MyMenu"]
                </nav>

               
                <div class="pull-right">
                    <div style="color:white">
                        @Html.Partial("_LoginPartial")
                    </div>
                </div>
            </div>
            
    </div>
        </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - TMBF</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)      
    <script>
        $(".text-box").toggleClass("form-control")
        $("select").toggleClass("form-control")
        $("#SearchString").toggleClass("form-control")
        $(".btn-default").toggleClass("btn-primary")
        $(".validation-summary-errors").toggleClass("alert alert-dismissable alert-danger")
    </script> 
</body>
</html>
