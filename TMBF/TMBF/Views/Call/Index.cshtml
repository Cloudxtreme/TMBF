@model IEnumerable<TMBF.Models.Call>

@{
    ViewBag.Title = "Index";
}

<h2>Call Details</h2>

<table class="table">
    <tr>
        <th>
            Caller #
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CallDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CallTime)
        </th>        
        <th>
            @Html.DisplayNameFor(model => model.ReceiverNo)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Customer.ID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CallDate)
        </td>
        <td>
            @(item.CallTime/100):@(item.CallTime%100)
        </td>        
        <td>
            @Html.DisplayFor(modelItem => item.ReceiverNo)
        </td>
        <td>            
            @Html.ActionLink("Details", "Details", new { id=item.ID })            
        </td>
    </tr>
}

</table>
