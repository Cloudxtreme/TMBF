@model TMBF.Models.Customer

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Customer</h4>
	<hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.UserName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.UserName)
        </dd>

        <dt>
            Phone No.
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ID)
        </dd>

        <dt>
            First Name
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FirstName)
        </dd>

        <dt>
            Last Name
        </dt>

        <dd>
            @Html.DisplayFor(model => model.LastName)
        </dd>

        <dt>
            Service
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Service.Name)
        </dd>

        <dt>
            Nationality
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Country.Name)
        </dd>
        
        <dt>
            Address
        </dt>

        <dd>
            @Html.DisplayFor(model => model.StreetAddress),&nbsp;@Html.DisplayFor(model => model.City)<br/>
            @Html.DisplayFor(model => model.State),&nbsp;@Html.DisplayFor(model => model.ZipCode)
        </dd>

        <dt>
            % Commission to<br/> Representative
        </dt>

        <dd>
           <br/> @Html.DisplayFor(model => model.CommisionForSalesRep)%
        </dd>

        <dt>
            Sales Representative               
        </dt>

        <dd>
            @Html.DisplayFor(model => model.SalesRep.FirstName)&nbsp;@Html.DisplayFor(model => model.SalesRep.LastName)
        </dd> 
        
        <br />
        <br />
        <dt>
            Call History:
        </dt>
        <br />
        <p>
        <dd>
            <table class="table">
                <tr>
                    <th>Date-Time</th>
                    <th>Source-Destination</th>
                    <th>Duration</th>
                </tr>
                @foreach (var item in Model.Calls)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.CallDate)&nbsp;&nbsp;
                            @(item.CallTime/100):@(item.CallTime%100)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.SourceCountry.Name)&nbsp;-&nbsp;@Html.DisplayFor(modelItem => item.DestinationCountry.Name)
                        </td>
                        <td>
                            @((int)(item.Duration/60))min.&nbsp;@(item.Duration % 60)sec.
                        </td>
                    </tr>
                }
            </table>
        </dd>
        </p>
               
    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.ID }) |
    @Html.ActionLink("Back to List", "Index")
</p>
